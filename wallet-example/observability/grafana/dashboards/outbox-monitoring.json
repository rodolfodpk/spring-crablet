{
  "dashboard": {
    "title": "Outbox Pattern Monitoring",
    "tags": ["outbox", "crablet", "event-sourcing"],
    "timezone": "browser",
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Current Leader",
        "type": "stat",
        "targets": [
          {
            "expr": "outbox_is_leader == 1",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "Not Leader"
                  },
                  "1": {
                    "text": "Leader"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Events Published Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(outbox_events_published_by_publisher_total[1m])",
            "legendFormat": "{{publisher}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Publisher Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "outbox_lag",
            "legendFormat": "Total Lag",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Events Behind"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Publishing Latency (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(outbox_publishing_duration_bucket[1m]))",
            "legendFormat": "{{publisher}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Publisher Status",
        "type": "stat",
        "targets": [
          {
            "expr": "outbox_publishers_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "outbox_publishers_paused",
            "legendFormat": "Paused",
            "refId": "B"
          },
          {
            "expr": "outbox_publishers_failed",
            "legendFormat": "Failed",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(outbox_errors_by_publisher_total[1m])",
            "legendFormat": "{{publisher}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Leadership Changes",
        "type": "graph",
        "targets": [
          {
            "expr": "changes(outbox_is_leader[5m])",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Changes"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
